# Environment
ENVIRONMENT=development

# API
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# OpenAI
OPENAI_API_KEY=sk-...

# Supabase
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/jd_vector
DATABASE_ECHO=False

# Embedding Model
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# LLM Model
LLM_MODEL=gpt-4o-mini
LLM_TEMPERATURE=0.3

# File Upload
MAX_UPLOAD_SIZE=20971520  # 20MB in bytes
ALLOWED_FILE_TYPES=application/pdf,text/plain,text/markdown

# Vector Store
VECTOR_STORE_TYPE=supabase  # supabase or chromadb
CHROMA_PERSIST_DIR=./chroma_db

# Logging
LOG_LEVEL=INFO
